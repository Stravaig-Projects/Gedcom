@using Stravaig.Gedcom.Model
@using Stravaig.Gedcom.Extensions
@using Stravaig.Gedcom

@if (IsBorn)
{
  <text>Born</text>
}
else if (IsDead)
{
  <text>Died</text>
}
else if (IsOccupation)
{
  <text>Occupation</text>
}
else if (IsResidence)
{
  <text>Residence</text>
}
else if (IsBaptism)
{
  <text>Baptised</text>
}
else if (IsImmigration)
{
  <text>Immigrated</text>
}
else if (IsNaturalisation)
{
  <text>Naturalised</text>
}
else
{
  @Event.Tag
  @if (Event.Type.HasContent())
  {
    <text>:</text>@Event.Type
  }
}
@code {
  [Parameter]
  public TimelineEntry Entry { get; set; }

  private EventRecord Event => (EventRecord)Entry.IndividualEvent ?? Entry.IndividualAttribute;
  private GedcomTag Tag => Event.Tag;
  private bool IsBorn => Tag == GedcomIndividualEventRecord.BirthTag;
  private bool IsDead => Tag == GedcomIndividualEventRecord.DeathTag;
  private bool IsOccupation => Tag == GedcomIndividualAttributeRecord.OccupationTag;
  private bool IsResidence => Tag == GedcomIndividualAttributeRecord.ResidenceTag;
  private bool IsBaptism => Tag == GedcomIndividualEventRecord.BaptismTag;
  private bool IsImmigration => Tag == GedcomIndividualEventRecord.ImmigrationTag;
  private bool IsNaturalisation => Tag == GedcomIndividualEventRecord.NaturalisationTag;
}
