@using Stravaig.Gedcom.Model
@using Stravaig.Gedcom.Extensions
@using Stravaig.Gedcom
@inherits SubjectEntryBase

@if (IsBorn)
{
  <text>Born</text>
}
else if (IsDead)
{
  <text>Died</text>
}
else if (IsOccupation)
{
  <text>Occupation</text>
}
else if (IsResidence)
{
  <text>Residence</text>
}
else if (IsBaptism)
{
  <text>Baptised</text>
}
else if (IsImmigration)
{
  <text>Immigrated</text>
}
else if (IsNaturalisation)
{
  <text>Naturalised</text>
}
else
{
  @Event.Tag
  @if (Event.Type.HasContent())
  {
    <text>:</text>@Event.Type
  }
}
@code {
}
